{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",       // Critical for Node.js
    "outDir": "./dist",        // Compiled JS goes here
    "rootDir": "./src",        // Explicitly set source directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Required for Node.js
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["src/**/*.ts"],  // Fixed glob pattern (removed erroneous "?")
  "exclude": ["node_modules", "train2.ts"]
}

